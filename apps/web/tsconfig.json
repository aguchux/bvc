{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "rootDir": "../../",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@lib/*": ["./src/lib/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@public/*": ["./public/*"],
      "@components/*": ["./src/components/*"],
      "@contexts/*": ["./src/contexts/*"],
      "@store/*": ["./src/store/*"],
      "@shared/*": ["../../shared/src/*"]
    },
    "types": ["next", "next/types/global"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts",
    "prisma.config.ts"
  ],
  "exclude": ["node_modules"]
}
