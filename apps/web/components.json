{
    "$schema": "https://ui.shadcn.com/schema.json",
    "style": "new-york",
    "rsc": true,
    "tsx": true,
    "tailwind": {
        "config": "./tailwind.config.js",
        "css": "./app/globals.css",
        "baseColor": "slate",
        "cssVariables": true
    },
    "iconLibrary": "lucide",
    "aliases": {
        "@/*": "./src/*",
        "components": "./src/components/*",
        "@shared/*": "../../shared/src/*",
        "@api/*": "../../api/src/*",
        "utils": "./utils/*"
    },
    "registries": {
        "@v0": "https://v0.dev/chat/b/{name}",
        "@acme": "https://registry.acme.com/{name}.json"
    }
}
