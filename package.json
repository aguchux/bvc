{
    "name": "portals",
    "private": true,
    "version": "0.1.4",
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev",
        "lint": "turbo run lint",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "check-types": "turbo run check-types",
        "bumpversion": "npm version patch -m \"Bump version to %s\"",
        "create_tag": "git tag -a v$(node \"require('./package.json').version\") -m \"Release version $(node \"require('./package.json').version\")\""
    },
    "devDependencies": {
        "prettier": "^3.7.4",
        "turbo": "^2.8.2",
        "typescript": "5.9.2"
    },
    "dependencies": {
        "prisma": "^7.3.0"
    },
    "engines": {
        "node": ">=18"
    },
    "packageManager": "npm@11.8.0",
    "workspaces": [
        "apps/*",
        "packages/*"
    ]
}
